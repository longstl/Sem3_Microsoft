                <li><a href="contact.html">Contact</a></li>
                <li><a href="@Url.Action("Register","Register", new {Area = "Customer"})">Registration</a></li>
                <li><a href="@Url.Action("Login","Login",new {Area = "Customer"})">Login</a></li>
            </ul>
        </nav>
    </header>
    <!-- Header section end -->
    <!-- Body section start -->
    @RenderBody()
